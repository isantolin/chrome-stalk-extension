{
    "manifest_version": 2,
    "name": "Chrome Stalk Extension",
    "icons": {
        "16": "imgs/CaticonResize16.png",
        "48": "imgs/CaticonResize48.png",
        "128": "imgs/CaticonResize128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "imgs/CaticonResize16.png",
            "48": "imgs/CaticonResize48.png",
            "128": "imgs/CaticonResize128.png"
        },
        "default_title": "Chrome Stalk Extension"
    },
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "version": "2.0.5",
    "permissions": [
        "tabs", "http://*/*",
        "background",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-2.1.1.min.js", "background.js", "ga.js", "init.js"],
            "run_at": "document_end"
        }
    ]
}
