{
    "manifest_version": 2,
    "name": "Chrome Stalk Extension",
    "icons": {
        "128": "imgs/CaticonResize128.png"
    },
    "browser_action": {
        "default_icon": {
            "128": "imgs/CaticonResize128.png"
        },
        "default_title": "Chrome Stalk Extension"
    },
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "version": "2.2.1",
    "permissions": [
        "tabs", "http://*/*",
        "background",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery-2.1.4.min.js", "functions.js", "background.js"],
            "run_at": "document_end"
        }
    ]
}
